{
  "name": "saju-tarot-server",
  "version": "1.0.0",
  "description": "Backend for Saju-Tarot Service",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npx prisma generate && tsc && npm run copy-images",
    "copy-images": "node -e \"const fs=require('fs');const path=require('path');const src=path.join(__dirname,'..','타로카드');const dest=path.join(__dirname,'dist','타로카드');if(fs.existsSync(src)){fs.cpSync(src,dest,{recursive:true});console.log('✅ 타로카드 이미지 복사 완료');}\"",
    "start": "node dist/index.js",
    "postinstall": "npx prisma generate",
    "test": "jest"
  },
  "keywords": [
    "saju",
    "tarot",
    "fortune"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.67.0",
    "@google/generative-ai": "^0.24.1",
    "@prisma/client": "^6.18.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "lunar-javascript": "^1.6.12",
    "openai": "^4.20.0",
    "prisma": "^6.18.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "tsx": "^4.7.0"
  }
}
