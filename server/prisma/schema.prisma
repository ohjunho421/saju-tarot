// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String
  name          String
  birthInfo     Json     // BirthInfo 객체 저장
  sajuAnalysis  Json     // SajuAnalysis 객체 저장
  mbti          String?  // MBTI 성격 유형 (예: ENFJ, INTP 등)
  points        Int      @default(0) // 보유 포인트 (1포인트 = 1원)
  createdAt     DateTime @default(now())
  lastLoginAt   DateTime?
  readings      Reading[]
  pointTransactions PointTransaction[]

  @@index([email])
}

// 포인트 거래 내역
model PointTransaction {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type            String   // 'charge' | 'use' | 'refund'
  amount          Int      // 변동 포인트 (양수: 충전, 음수: 사용)
  balance         Int      // 거래 후 잔액
  description     String   // 거래 설명
  orderId         String?  // 레몬스퀴지 주문 ID (충전 시)
  readingId       String?  // 사용된 리딩 ID (사용 시)
  createdAt       DateTime @default(now())

  @@index([userId, createdAt])
  @@index([orderId])
}

model Reading {
  id                      String   @id @default(cuid())
  userId                  String
  user                    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  question                String
  spreadType              String   // 'one-card' | 'three-card' | 'celtic-cross' | 'saju-custom'
  drawnCards              Json     // DrawnCard[] 배열 저장
  interpretation          String
  elementalHarmony        String
  personalizedAdvice      String
  adviceCardInterpretation String?
  compatibilityReading    String?  // 궁합 리딩 결과
  aiProvider              String?  // 'gemini' | 'claude'
  createdAt               DateTime @default(now())

  @@index([userId, createdAt])
}
